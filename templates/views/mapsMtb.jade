extends ../layouts/default


block content
  .container
    .row
        .centralTnTagContainer.col-md-10.col-md-offset-1
          a(target="_blank" href='https://www.google.com/maps/d/viewer?ll=36.319551%2C-86.682129&spn=1.549074%2C2.334595&msa=0&z=8&source=embed&ie=UTF8&mid=z-dkWQzHLjKs.kzi80Nn13wI4', style="text-decoration: none")
            h5.centralTnTag.col-md-12 Central TN Trails
    .row
      .trailContainer.col-sm-5.col-sm-offset-1.col-md-5.col-md-offset-1
        .hamiltonCreekContainer
          h3.trailName Hamilton Creek
          a(href="../../images/mtbMaps/hamiltonCreek.jpg")
            img.trailMapImg(src="../../images/mtbMaps/hamiltonCreek.jpg" class="img-responsive" alt="Cinque Terre")
          p.trailInfo Rocks and roots.  11.5 miles of trail.  Challenging features throughout.
          p.trailInfo
            a(target="_blank" href="http://www.singletracks.com/bike-trails/hamilton-creek.html") Reviews
          p.trailInfo
            a(target="_blank" href="https://www.google.com/maps/place/Hamilton+Creek+Mountain+Bike+Trail,+Nashville,+TN+37217") Trailhead
      .trailContainer.col-md-5.col-sm-5
        .percyWarnerContainer
          h3.trailName Percy Warner MTB Park
          a(href="../../images/mtbMaps/warnerMtbPark.png")
            img.trailMapImg(src="../../images/mtbMaps/warnerMtbPark.png" class="img-responsive" alt="Cinque Terre")
          p.trailInfo The house favorite.  7 miles of polished singletrack.
          p.trailInfo
            a(target="_blank" href="http://www.singletracks.com/bike-trails/Percy-Warner-Mountain-Bike-Trails.html") Reviews
          p.trailInfo
            a(target="_blank" href="https://www.google.com/maps/place/Percy+warner+mountain+bike+trail") Trailhead
    .row
      .trailContainer.col-sm-5.col-sm-offset-1.col-md-5.col-md-offset-1
        .hamiltonCreekContainer
          h3.trailName Chickasaw Trace
          a(href="../../images/mtbMaps/chickasawTrace.png")
            img.trailMapImg(src="../../images/mtbMaps/chickasawTrace.png" class="img-responsive" alt="Cinque Terre")
          p.trailInfo 8.5-mile loop. Suitable for all skill levels.
          p.trailInfo
            a(target="_blank" href="http://www.singletracks.com/bike-trails/chickasaw-trace.html") Reviews
          p.trailInfo
            a(target="_blank" href="https://www.google.com/maps/place/1415+New+Hwy+7,+Columbia,+TN+38401") Trailhead
      .trailContainer.col-md-5.col-sm-5
        .percyWarnerContainer
          h3.trailName Lock 4 Mountain
          a(href="../../images/mtbMaps/Lock4Mountain.jpg")
            img.trailMapImg(src="../../images/mtbMaps/Lock4Mountain.jpg" class="img-responsive" alt="Cinque Terre")
          p.trailInfo 9 miles of singletrack trail.  Suitable for beginners and intermediate riders alike.
          p.trailInfo
            a(target="_blank" href="http://www.singletracks.com/bike-trails/lock-4.html") Reviews
          p.trailInfo
            a(target="_blank" href="https://www.google.com/maps/dir//36.333189,-86.469476/@36.3305364,-86.4716989,16.64z") Trailhead
    .row
      .trailContainer.col-sm-5.col-sm-offset-1.col-md-5.col-md-offset-1
        .hamiltonCreekContainer
          h3.trailName Montgomery Bell
          a(href="../../images/mtbMaps/mBell.png")
            img.trailMapImg(src="../../images/mtbMaps/mBell.png" class="img-responsive" alt="Cinque Terre")
          p.trailInfo 23.5 miles of dirt trail.  Intermediate level riding.
          p.trailInfo
            a(target="_blank" href="http://www.singletracks.com/bike-trails/montgomery-bell-state-park-mtb-trail.html") Reviews
          p.trailInfo
            a(target="_blank" href="https://www.google.com/maps/dir//Montgomery+Bell+State+Park,+1000+Hotel+Ave,+Burns,+TN+37029") Trailhead
      .trailContainer.col-md-5.col-sm-5
        .percyWarnerContainer
          h3.trailName Cane Ridge
          a(href="../../images/mtbMaps/caneRidge.jpg")
            img.trailMapImg(src="../../images/mtbMaps/caneRidge.jpg" class="img-responsive" alt="Cinque Terre")
          p.trailInfo Two miles of trail perfect for beginners.
          p.trailInfo
            a(target="_blank" href="http://www.singletracks.com/bike-trails/cane-ridge.html") Reviews
          p.trailInfo
            a(target="_blank" href="https://www.google.com/maps/dir//Cane+Ridge+Park,+419+Battle+Rd,+Antioch,+TN+37013,+United+States") Trailhead
